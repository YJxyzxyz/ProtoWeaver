{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@protoweaver/ui-ir": ["packages/ui-ir/src"],
      "@protoweaver/codegen": ["services/codegen/src"],
      "@protoweaver/cli": ["packages/cli/src"]
    }
  }
}
